        <title>  成都赤晓</title>
        <script type="text/javascript">
            var nowYearStamp = JSON.parse('<%- JSON.stringify(post.nowYearStamp) %>');
        var nextYearStamp = JSON.parse('<%- JSON.stringify(post.nextYearStamp) %>');
        var dayStamp = 24*60*60*1000;
        var dayArray = JSON.parse('<%- JSON.stringify(post.dayArray) %>');
        var canvasEvents = {};
        for(nowYearStamp;nowYearStamp<nextYearStamp;nowYearStamp+=dayStamp) {
          var yearMS = new Date(nowYearStamp).getFullYear();
          var monthMS = new Date(nowYearStamp).getMonth() + 1;
          var dayMS = new Date(nowYearStamp).getDate();
          var dateRight = yearMS+"-"+monthMS+"-"+dayMS;
          if((monthMS+"").length < 2) monthMS = "0"+monthMS;
          if((dayMS+"").length < 2) dayMS = "0"+dayMS;
          var dateLeft = monthMS+"-"+dayMS+"-"+yearMS;
          canvasEvents[dateLeft] = '<a href="#"></a>';
          for(var i in dayArray) {
            if(dayArray[i].date == dateRight) {
              canvasEvents[dateLeft] = '<a href="#">'+dayArray[i].content+'</a>';
            }
          }
        }
    </script> 
